{
  "info": {
    "name": "SuperVolcano Robot API",
    "description": "API for robots to access location-specific task instructions and videos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "X-Robot-API-Key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{ROBOT_API_KEY}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://supervolcano-teleops.vercel.app/api/robot",
      "type": "string"
    },
    {
      "key": "ROBOT_API_KEY",
      "value": "9c5eff2e114ebed6a5f93f132cfb9adb7f2dc9c551c9451aa6360237d699284ef",
      "type": "string"
    },
    {
      "key": "LOCATION_ID",
      "value": "bd577ffe-d733-4002-abb8-9ea047c0f326",
      "type": "string"
    },
    {
      "key": "JOB_ID",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/health",
          "host": ["{{BASE_URL}}"],
          "path": ["health"]
        },
        "description": "Check API status and version"
      },
      "response": []
    },
    {
      "name": "Get All Jobs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/jobs?limit=10&offset=0",
          "host": ["{{BASE_URL}}"],
          "path": ["jobs"],
          "query": [
            {
              "key": "limit",
              "value": "10",
              "description": "Max number of jobs to return"
            },
            {
              "key": "offset",
              "value": "0",
              "description": "Number of jobs to skip"
            },
            {
              "key": "category",
              "value": "",
              "description": "Filter by category (optional)",
              "disabled": true
            },
            {
              "key": "priority",
              "value": "",
              "description": "Filter by priority: low/medium/high (optional)",
              "disabled": true
            }
          ]
        },
        "description": "Retrieve all available jobs across all locations"
      },
      "response": []
    },
    {
      "name": "Get All Locations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/locations",
          "host": ["{{BASE_URL}}"],
          "path": ["locations"]
        },
        "description": "Retrieve all service locations"
      },
      "response": []
    },
    {
      "name": "Get Jobs by Location",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/locations/{{LOCATION_ID}}/jobs",
          "host": ["{{BASE_URL}}"],
          "path": ["locations", "{{LOCATION_ID}}", "jobs"]
        },
        "description": "Retrieve all jobs for a specific location"
      },
      "response": []
    },
    {
      "name": "Get Job Videos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/jobs/{{JOB_ID}}/videos",
          "host": ["{{BASE_URL}}"],
          "path": ["jobs", "{{JOB_ID}}", "videos"]
        },
        "description": "Retrieve instructional videos for a specific job"
      },
      "response": []
    }
  ]
}

